# BrandClave Aggregator Environment Configuration

# Mistral API (for embeddings)
MISTRAL_API_KEY=your_mistral_api_key_here

# Database paths
DATABASE_URL=sqlite:///./data/brandclave.db
CHROMA_PERSIST_DIR=./data/chroma

# Embedding configuration
# Options: "mistral" or "local" (sentence-transformers)
EMBEDDING_PROVIDER=mistral

# Scraping settings
SCRAPER_USER_AGENT=BrandClave-Aggregator/1.0

# Logging
LOG_LEVEL=INFO

# Redis (optional - caching works without it)
REDIS_URL=redis://localhost:6379/0

# Scheduler
SCHEDULER_ENABLED=true

# VERSES Genius Active Inference API
GENIUS_API_URL=https://your-agent-url.agents.genius.verses.ai
GENIUS_API_KEY=your_genius_api_key_here
GENIUS_AGENT_ID=your_agent_id_here
GENIUS_LICENSE_KEY=your_license_key_here
